extends layout

block variables
  - var title = "Add item"

block content
  .section
    .section__inner.pt-5
      h2.text-center Manage marketplace  
      form(action="/marketplace/manage/add", method="POST")
          input(type="text" name="name" placeholder="Name of website").mb-3.pl-2
          br
          input(type="text" name="imageurl" placeholder="An url for image").mb-3.pl-2
          br
          label Add to marketplace
          input(type="checkbox" name="isActive").ml-1
          br      
          input(type="submit" value="Add to DB").btn.btn-success








